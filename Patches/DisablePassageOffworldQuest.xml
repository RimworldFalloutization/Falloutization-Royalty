    <xpath>Defs/StorytellerDef[@Name="BaseStoryteller"]/comps/li[@Class="StorytellerCompProperties_SingleOnceFixed" and incident="GiveQuest_EndGame_ShipEscape"]</xpath>
  </Operation>
</Patch>
