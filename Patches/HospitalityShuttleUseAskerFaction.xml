<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Use asker's faction for the drop-off shuttle in Hospitality (Joiners/Prisoners) so FCP factions get their vertibirds -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/QuestScriptDef[defName="Util_ArriveByDropPodsOrShuttle"]/root/nodes/li[node/nodes/li/def="Util_TransportShip_DropOff"]/node/nodes/li[def="Util_TransportShip_DropOff"]/parms/owningFaction</xpath>
    <value>
      <owningFaction>$askerFaction</owningFaction>
    </value>
  </Operation>
</Patch>
